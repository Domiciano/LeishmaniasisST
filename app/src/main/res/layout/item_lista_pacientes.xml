<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Susanita Perez"

        android:paddingBottom="12dp"
        android:paddingLeft="20dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:textStyle="italic"
        android:textSize="10pt"
        android:id="@+id/lista_pacientes_nombre"
        android:textColor="@color/normal_text"
        />

    <TextView
        android:layout_width="14pt"
        android:layout_height="14pt"
        android:gravity="right|center_vertical"
        android:id="@+id/img_evaluated"
        android:background="@drawable/img_paciente_evaluado"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:gravity="right"
        android:textColor="@color/normal_text"
        android:textSize="10pt"
        android:textStyle="bold|italic"
        android:id="@+id/lista_pacientes_dia"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/28"
        android:gravity="right"
        android:textSize="8pt"
        android:textColor="@color/light_text"
        android:id="@+id/lista_pacientes_total"
        android:textStyle="italic"/>




</LinearLayout>