<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".SintomasActivity"
    android:background="@color/orange_background">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_sitomas_otros_activiy"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="110px"
            android:layout_marginBottom="300px">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                >
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6. Otros síntomas y/o\nenfermedades"
                    android:gravity="center"
                    android:textStyle="bold|italic"
                    android:textColor="#FFF"
                    android:textSize="11pt"
                    android:id="@+id/titulo_otros_sintomas"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#FFF"/>

                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="8pt"
                android:textStyle="italic"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Registre aquí si el paciente ha presentado otros síntomas o enfermedades en los últimos 4 días."
                android:id="@+id/otros_sintomas_descripcion"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFF"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                />


            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="0dp"
                android:id="@+id/lista_sintomas"
                android:fadeScrollbars="false"
                android:divider="#FFF"
                android:dividerHeight="1dp"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300px"

            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:gravity="bottom|center">



            <Button
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:background="@color/botones_background"
                android:text="NUEVO SÍNTOMA/ENFERMEDAD"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="7pt"
                android:textColor="#FFF"
                android:onClick="registrarNuevoSintoma"
                android:id="@+id/nuevo_sintoma"
                style="?android:attr/borderlessButtonStyle"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/botones_background"
                android:text="SIGUIENTE"
                android:textSize="8pt"
                android:textColor="#FFF"
                android:height="110px"
                android:onClick="doSiguiente"
                android:layout_marginTop="30px"
                android:id="@+id/siguiente_sintomas_osteo"
                />
        </LinearLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>