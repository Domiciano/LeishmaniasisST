                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Lesiones pierna izquierdo"
                    android:textColor="#FFF"
                    android:textSize="11pt"
                    android:textStyle="bold|italic" />

                <View
