<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="650px"
    android:background="@drawable/dialog_shape">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione el número de ampollas  administradas el día 31 de Enero"
        android:id="@+id/dialog_ampollas_texto"
        android:gravity="center"
        android:textStyle="italic"
        android:textSize="10pt"
        android:padding="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <Button
            android:layout_width="30dp"
            android:layout_height="120dp"
            android:background="@mipmap/img_ampolladeseleccionada"
            android:id="@+id/ampolla1"
            />
        <Button
            android:layout_width="30dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/img_ampolladeseleccionada"
            android:id="@+id/ampolla2"
            />
        <Button
            android:layout_width="30dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/img_ampolladeseleccionada"
            android:id="@+id/ampolla3"
            />
        <Button
            android:layout_width="30dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/img_ampolladeseleccionada"
            android:id="@+id/ampolla4"
            />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/img_ninguna_grande_seleccionada"
            android:id="@+id/ninguna_ampolla"
            />

    </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="REGISTRAR"
            android:textColor="#FFF"
            android:textSize="10pt"
            android:padding="15dp"
            android:background="@drawable/button_shape"
            android:id="@+id/dialog_ampollas_ok"
            />


</LinearLayout>