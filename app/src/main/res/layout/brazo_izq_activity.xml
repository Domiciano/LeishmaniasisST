<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".bodylocations.TroncoActivity"
    android:background="@color/orange_background">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_brazo_izquierdo"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="64dp"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lesiones brazo izquierdo"
                    android:gravity="center"
                    android:textStyle="bold|italic"
                    android:textColor="#FFF"
                    android:textSize="11pt"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#FFF"
                    />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/region_brazo_izq">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="26dp"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="200dp"
                        android:background="@drawable/img_brazo_frente"
                        android:id="@+id/brazo_der_frente"
                        android:scaleX="-1"
                        />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="200dp"
                        android:background="@drawable/img_brazo_atras"
                        android:id="@+id/brazo_der_espalda"
                        android:layout_marginLeft="40dp"
                        android:scaleX="-1"
                        />


                </LinearLayout>


                <Button
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:background="@drawable/bp19"
                    android:scaleX="-1"
                    android:id="@+id/bp35"
                    android:visibility="gone"
                    />

                <Button
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:background="@drawable/bp20"
                    android:scaleX="-1"
                    android:id="@+id/bp36"
                    android:visibility="gone"
                    />

                <Button
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:background="@drawable/bp21"
                    android:scaleX="-1"
                    android:id="@+id/bp37"
                    android:visibility="gone"
                    />

                <Button
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:background="@drawable/bp22"
                    android:scaleX="-1"
                    android:id="@+id/bp38"
                    android:visibility="gone"
                    />

                <Button
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:background="@drawable/bp23"
                    android:scaleX="-1"
                    android:id="@+id/bp39"
                    android:visibility="gone"
                    />

                <Button
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:background="@drawable/bp24"
                    android:scaleX="-1"
                    android:id="@+id/bp40"
                    android:visibility="gone"
                    />

                <Button
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:background="@drawable/bp25"
                    android:scaleX="-1"
                    android:id="@+id/bp41"
                    android:visibility="gone"
                    />

                <Button
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:background="@drawable/bp26"
                    android:scaleX="-1"
                    android:id="@+id/bp42"
                    android:visibility="gone"
                    />

                <Button
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:background="@drawable/bp27"
                    android:scaleX="-1"
                    android:id="@+id/bp43"
                    android:visibility="gone"
                    />

                <Button
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:background="@drawable/bp28"
                    android:scaleX="-1"
                    android:id="@+id/bp44"
                    android:visibility="gone"
                    />

                <Button
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:background="@drawable/bp29"
                    android:scaleX="-1"
                    android:id="@+id/bp45"
                    android:visibility="gone"
                    />

                <Button
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:background="@drawable/bp30"
                    android:scaleX="-1"
                    android:id="@+id/bp46"
                    android:visibility="gone"
                    />

                <Button
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:background="@drawable/bp31"
                    android:scaleX="-1"
                    android:id="@+id/bp47"
                    android:visibility="gone"
                    />

                <Button
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:background="@drawable/bp32"
                    android:scaleX="-1"
