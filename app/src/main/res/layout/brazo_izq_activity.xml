                    android:background="@drawable/bp33"
                    android:scaleX="-1"
                    android:id="@+id/bp49"
                    android:visibility="gone"
                    />

                <Button
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:background="@drawable/bp34"
                    android:scaleX="-1"
                    android:visibility="gone"
                    android:id="@+id/bp50"
                    />



            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FFF"
                android:textStyle="italic"
                android:textSize="9pt"
                android:layout_marginTop="40px"
                android:text="Lugar aproximado de la lesiÃ³n"/>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:background="@color/botones_background"
            android:textSize="10pt"
            android:textColor="#FFF"
            android:layout_height="60dp"
            android:text="VOLVER"
            android:layout_alignParentBottom="true"
            android:onClick="doVolver"
            android:id="@+id/brazo_izq_boton_volver"/>


    </RelativeLayout>



</android.support.design.widget.CoordinatorLayout>